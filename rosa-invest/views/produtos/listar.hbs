{{#> base }}
  {{#*inline "title" }}Produtos{{/inline}}

  {{#*inline "mainContent" }}
    <h1>Produtos - RENDA FIXA</h1>
    <h2>
      <a href="/produtos/novo">NOVO</a>
    </h2>

    <table>
      <tr>
        <th>#</th>
        <th>Nome</th>
        <th>Situação</th>
        <th>Taxa Juros(%)</th>
        <th>Ações</th>
      </tr>
      {{#each produtos as |produto|}}
        <tr>
          <td>{{produto.id}}</td>
          <td>{{produto.nome}}</td>
          <td>{{produto.status}}</td>
          <td>{{produto.taxaRentabilidade}}</td>
          <td>
            <a href="/produtos/alternar-status?id={{produto.id}}">
              {{#if produto.disponivel }}
                Suspender
              {{else}}
                Disponibilizar
              {{/if}}
            </a> 
            <a href="/produtos/remover?id={{produto.id}}">Remover</a>
          </td>
        </tr>
      {{/each}}
    </table>
  {{/inline}}

{{/base }}